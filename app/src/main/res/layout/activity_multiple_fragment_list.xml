<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Fragment Left List -->
    <fragment
        android:id="@+id/fragment_left_list"
        android:layout_width="@dimen/layout_width_zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.nocholla.navigationviewlistitems.fragments.list.FragmentLeftList"/>

    <!-- Fragment Right List -->
    <fragment
        android:id="@+id/fragment_right_list"
        android:layout_width="@dimen/layout_width_zero"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="com.nocholla.navigationviewlistitems.fragments.list.FragmentRightList"/>

</LinearLayout>