<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Fragment Left Grid-->
    <fragment
        android:id="@+id/fragment_left_grid"
        android:layout_width="@dimen/layout_width_zero"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="com.nocholla.navigationviewlistitems.fragments.grid.FragmentLeftGrid"/>

    <!-- Fragment Right Grid -->
    <fragment
        android:id="@+id/fragment_right_grid"
        android:layout_width="@dimen/layout_width_zero"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="com.nocholla.navigationviewlistitems.fragments.grid.FragmentRightGrid"/>

</LinearLayout>